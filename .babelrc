{
  "plugins": [
    "@babel/plugin-transform-runtime"
  ],
  "env": {
    "cjs": {
      "presets": [
        ["@babel/preset-env", { "loose": true }]
      ]
    },
    "es": {
      "presets": [
        ["@babel/preset-env", { "loose": true, "modules": false }]
      ]
    },
    "test": {
      "presets": [
        ["@babel/preset-env", { "loose": true }],
        "@babel/preset-react"
      ],
      "plugins": [
        "istanbul"
      ]
    }
  }
}
